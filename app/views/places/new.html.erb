
<div class="booyah-box col-xs-10 col-xs-offset-1">
 <div class="simple-form">
  <h1>Enter Your Place Details</h1>
    <div class="form-style" class="field">
        <%= simple_form_for @place do |f| %>
          <%= f.input :name, :input_html => { :class => 'input' } %>
        <br />
          <%= f.input :address, :input_html => { :class => 'input' } %>
        <br />
          <%= f.input :description, :input_html => { :class => 'input-description' } %>
        <br />
    </div>
      
    <div class="modal-footer">

          <div class="clear"></div>

    <div class="image-upload">
        <%= form_for @image, url: places_images_path(@place) do |f| %>
          <p>
        <label>Upload Photo</label>
            <%= f.file_field :attachment %>
            <%= f.text_field :caption %>
                <%= f.submit 'Submit', class: 'btn btn-sharp' %>
                  <button type="button" class="btn btn-sharp" data-dismiss="modal">Close</button>
                <%end%>
        <%end%>
          </p>
    </div>

  </div>
  </div>
