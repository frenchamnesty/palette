
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Enter Your Place Details</h1>
    <div class="form-style" class="field">
    <%= simple_form_for @place do |f| %>
      <%= f.input :name, :input_html => { :class => 'input' } %>
      <br />
      <%= f.input :address, :input_html => { :class => 'input' } %>
      <br />
      <%= f.input :description, :input_html => { :class => 'input-description' } %>
      <br />
        <div class="modal-footer">
        <br />
            <div class="clear"></div>
            <br/>
              <%= f.submit 'Submit', class: 'btn btn-sharp' %>
              <button type="button" class="btn btn-sharp" data-dismiss="modal">Close</button><end%>
        </div>
      <%end%>
      </div>
      <div class="photo-form">
      <%= simple_form_for @image, url_for(:action => 'create', :controller => 'images'), :method => 'post' do |f| %>
        <p>
          <label>Upload Photo</label>
          <%= f.file_field :image %>
          <%= f.input :caption %>
        </p>
        <%end%>
      </div>
      <br />
      <br />
  </div>

