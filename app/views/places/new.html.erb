
<div class="booyah-box col-xs-10 col-xs-offset-1">
 <div class="simple-form">
  <h1>Enter Your Place Details</h1>
    <div class="form-style" class="field">
        <%= simple_form_for @place do |f| %>
          <%= f.input :name, :input_html => { :class => 'input' } %>
        <br />
          <%= f.input :address, :input_html => { :class => 'input' } %>
        <br />
          <%= f.input :description, :input_html => { :class => 'input-description' } %>
        <br />
      <%end%>
    </div>
      
    <div class="clear"></div>

<!-- Photo Uploader -->

     <div class="image-upload">
        <%= simple_form_for @image, url: place_images_path(@place) do |f| %>
          <p>
          <div class="simple-form" class="form-style">
          <label>Upload Photo</label>
            <%= f.file_field :attachment, class: 'btn btn-sharp-photos' %>
            <%= f.input :caption %>
                <%= f.submit 'Upload', class: 'btn btn-sharp-photos' %>
          <%end%>
          </div>
          </p>

    </div>
    </div>
  
</div>

