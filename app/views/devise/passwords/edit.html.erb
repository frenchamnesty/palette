<div class="booyah-box col-xs-8 col-xs-offset-2 signup-page">


<h2>Change your password</h2>
<br />

    <div class="form-group" class='field-set'>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs" class="form-control">
    <%= f.input :password, label: "New password:", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    
    <div class="clear"></div>    
    <br />
    <%= f.input :password_confirmation, label: "Confirm password:", required: true %>
  
  </div>
    <br />
  <div class="form-actions">
    <%= f.button :submit, "Change my password", class: 'btn btn-sharp-forgot' %>
  </div>


<% end %>

</div>

    <div class='render'>
      <%= render "devise/shared/links"%>
    </div>

</div>
