<div class="booyah-box col-xs-6 col-xs-offset-3 login-page">

    <h2>Forgot your password?</h2>
    <br />

    <div class="form-group" class='field-set'>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

        <div class="form-inputs" class="form-control">
          <%= f.input :email, required: true, autofocus: true %>
        </div>

          <div class="clear"></div>
          <br />

        <div class="form-actions">
          <%= f.button :submit, "Send me reset password instructions", class: 'btn btn-sharp-forgot' %>
        </div>

      <% end %>

    </div>    


    <div class='render'>
      <%= render "devise/shared/links"%>
    </div>

</div>
