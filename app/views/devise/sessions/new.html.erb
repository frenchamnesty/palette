
<div class="booyah-box col-xs-6 col-xs-offset-3 login-page">
<h2>Log in</h2>
<br />
<br />

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group" class='field-set'>
    <%= f.input :email, required: false, autofocus: true, :class=>'form-control', :id=>'usr', :label=>'Email:' %>
  </div>
  <div class="form-group" class='field-set'>
    <%= f.input :password, required: false, :class=>'form-control', :id=>'pwd', :label=>'Password:'%>
  </div>
  <br />
  <div class="form-actions">
    <%= f.button :submit, "Submit", class: 'btn btn-sharp' %>
  </div>
<% end %>

<br />

<div class='render'>
  <%= render "devise/shared/links"%>
</div>



</div>
